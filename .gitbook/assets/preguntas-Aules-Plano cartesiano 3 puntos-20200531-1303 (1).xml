    withlabel:true,
    visible:true,
    label:{autoposition:true},
    fixed:true
  });

 var ptoC=brd.create('point', [c1,c2], {
    name: 'C',
    withlabel:true,
    visible:true,
    label:{autoposition:true},
    fixed:true
  });
   
  
brd.update();

</script>

